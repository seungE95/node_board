extends base
block content
    div.login-form-wrapper
        div.login-form
            if errorMessage
                p(style="color: red;")=errorMessage
                br
            h3.title-name â˜•Edit Profile
            form(method="POST").row.g-3
                div.col-md-6
                    label(for="inputUser").form-label User name
                    input(type="text" placeholder="User name" name="username" value=loggedInUser.username required).form-control#inputUser
                div.col-md-6
                    label(for="inputNickname").form-label Nickname
                    input(type="text" placeholder="Nickname" name="name" value=loggedInUser.name required).form-control#inputNickname
                div.col-12
                    label(for="inputPassword").form-label Password
                    input(type="password" placeholder="Password" name="password" required).form-control#inputAddress
                div.col-12
                    label(for="inputPasswordConfirm").form-label Confirmation Password
                    input(type="password" placeholder="Confirmation Password" name="password2" required).form-control#inputAddress2
                div.col-12
                    label(for="inputEmail").form-label Email
                    input(type="email" placeholder="Email" name="email" value=loggedInUser.email required).form-control#inputEmail
                div.col-12
                    label(for="inputRegion").form-label Region
                    input(type="text" placeholder="Region" name="region" value=loggedInUser.region required).form-control#inputRegion
                div.col-12
                    button(type="submit").btn.btn-primary Sign in