extends base
block content
    div.board-form-wrapper
        form(method="POST").board-form
            h3.title-name Watch    
            div.col-12
                label(for="inputTitle").form-label 📝Board Title
                input(type="text" placeholder="Title" name="title" required).form-control#inputTitle
            br
            div.col-12
                label(for="inputText").form-label 🎄Image URL
                input(type="text" placeholder="Text" name="imgUrl" required).form-control#inputText
            br
            p.board-title--text ⛳ Textarea
            div.input-group 
                span.input-group-text Textarea
                textarea(aria-label="With textarea" name="content" required).form-control
            br
            input(type="submit" value="Write Board").btn.btn-primary