extends base
block content
    div.board-form-wrapper
        if errorMessage
            span=errorMessage
        form(method="POST").board-form
            h3.title-name=pageTitle    
            div.col-12
                label(for="inputTitle").form-label 📝Board Title
                input(type="text" placeholder="Title" name="title" value=board.title maxLength=30).form-control#inputTitle
            br
            div.col-12
                label(for="inputText").form-label 🎄Image URL
                input(type="text" placeholder="Text" name="imgUrl" value=board.imgUrl ).form-control#inputText
            br
            p.board-title--text ⛳ Textarea
            div.input-group 
                span.input-group-text Textarea
                textarea(aria-label="With textarea" name="content" maxLength=300).form-control=board.content
            br
            input(type="submit" value="Write Board").btn.btn-primary